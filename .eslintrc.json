{
    "parser": "@typescript-eslint/parser",
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard-with-typescript",
        "plugin:prettier/recommended"
    ],
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "quotes": ["warn", "double"],
        "@typescript-eslint/quotes": ["warn", "double"],
        "@typescript-eslint/prefer-nullish-coalescing": "warn",
        "prettier/prettier": [
            "error",
            {
                "singleQuote": false,
                "semi": false,
                "printWidth": 120
            }
        ]
    }
}